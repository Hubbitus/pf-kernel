pkgname=kernel33-pf
basekernel=3.3.1
pkgver=3.3.1
pkgrel=pf
pkgdesc="The Linux Kernel and modules"
arch=('i686' 'x86_64')
license=('GPL')
url="http://pf.natalenko.name"
depends=('kmod' 'mkinitcpio')
provides=(kernel33)
install=kernel33.install

build() {
  LOCAL_VERSION=-$pkgrel

  cd ..
  make -j2 || return 1
  mkdir -p $startdir/pkg/{lib/modules,boot}
  make INSTALL_MOD_PATH=$startdir/pkg modules_install || return 1

  # There's no separation of firmware depending on kernel version - 
  # comment this line if you intend on using the built kernel exclusively,
  # otherwise there'll be file conflicts with the existing kernel
  rm -rf $startdir/pkg/lib/firmware

  install -Dm644 "System.map" "$startdir/pkg/boot/System.map33$LOCAL_VERSION"
  install -Dm644 "arch/x86/boot/bzImage" "$startdir/pkg/boot/vmlinuz33$LOCAL_VERSION"

  # Change the version strings in kernel33.install
  sed -i \
	-e "s/KERNEL_VERSION=.*/KERNEL_VERSION=\"$basekernel\"/" \
	-e "s/LOCAL_VERSION=.*/LOCAL_VERSION=\"$LOCAL_VERSION\"/" \
	$startdir/kernel33.install
}

